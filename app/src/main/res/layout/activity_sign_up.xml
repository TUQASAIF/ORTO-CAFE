<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/font1"
                android:lineSpacingExtra="4sp"
                android:text="WELCOME TO ORTO CAFE!"
                android:textColor="#8c746a"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_phone_login"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorTop"
                android:gravity="left"
                android:hint="ENTER YOUR PHONE NUMBER"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/br"
                android:textSize="20sp"
                android:textColorHint="@color/br" />


            <EditText
                android:id="@+id/ed_email_login"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorTop"
                android:gravity="left"
                android:hint="ENTER YOUR EMAIL"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/br"
                android:textColorHint="@color/br" />


            <EditText
                android:id="@+id/ed_name_login"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorTop"
                android:gravity="left"
                android:hint="ENTER YOUR NAME"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/br"
                android:textColorHint="@color/br" />

            <EditText
                android:id="@+id/ed_password_login"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="left"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorTop"
                android:gravity="left"
                android:hint="ENTER YOUR PASSWORD"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/br"
                android:textColorHint="@color/br" />

            <EditText
                android:id="@+id/confirm_passwword_textbox_reg"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="left"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorTop"
                android:gravity="left"
                android:hint="ENTER YOUR CONFIRM PASSWORD"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/br"
                android:textColorHint="@color/br" />


            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="29dp"
                android:background="@drawable/busin"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="SIGN UP"
                android:textColor="#fff"
                android:textSize="23sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font1"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="0sp"
                    android:text="DO YOU HAVE ACCOUNT?"
                    android:textColor="@color/colorTop"
                    android:textSize="14sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/text_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/font1"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="0sp"
                    android:text="LOGIN"
                    android:textColor="@color/br"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>