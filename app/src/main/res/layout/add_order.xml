<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:hint="enter your location"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textColorHint="#ddd"
                    android:id="@+id/ed_me_location_addorder"
                    android:layout_height="wrap_content" />

                <!--            <View-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:background="@android:color/darker_gray"-->
                <!--                android:layout_marginTop="10dp"-->
                <!--                android:layout_height="1dp"/>-->

                <TextView
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:text="IMPORTANT NOTE : ALL DETAILS MUST BE ENTERED .. PLEASE ENTER THEM"
                    android:textColor="@color/br"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:visibility="visible"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTop"
                    android:text="EXTRA NOTES"
                    android:layout_height="wrap_content" />

                <EditText android:visibility="visible"
                    android:id="@+id/ed_note_login"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/colorTop"
                    android:gravity="left"
                    android:hint=""
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:textColor="@color/br"
                    android:textColorHint="@color/br" />



                <TextView
                    android:visibility="visible"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTop"
                    android:text="   DAY / TIME OF RECEIPT OF THE ORDER"
                    android:layout_height="wrap_content" />

                <EditText
                    android:visibility="visible"
                    android:id="@+id/ed_date_login"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/colorTop"
                    android:gravity="left"
                    android:hint=""
                    android:inputType="date"
                    android:paddingLeft="5dp"
                    android:textColor="@color/br"
                    android:textColorHint="@color/br" />


                <TextView
                    android:visibility="visible"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTop"
                    android:text="   PHONE NUMBER IF IT'S A GIFT (FRIEND)"
                    android:layout_height="wrap_content" />

                <EditText
                    android:visibility="visible"
                    android:id="@+id/ed_phoneFrind"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/colorTop"
                    android:gravity="left"
                    android:hint=""
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:textColor="@color/br"
                    android:textColorHint="@color/br" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.cardview.widget.CardView>