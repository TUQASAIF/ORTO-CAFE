<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    app:cardElevation="4dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/image_supcategry"
            android:src="@color/overview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout

            android:background="@color/overview"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_name_supcategry"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="NAME"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:paddingEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:id="@+id/text_priceD_supcategry"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_width="wrap_content"
                    android:text="NAME"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>





            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_prices_supcategry"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"

                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_width="0dp"
                    android:layout_weight="1"                      android:text="price"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_height="wrap_content" />

                <TextView

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/text_pricem_supcategry"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"

                    android:layout_width="0dp"
                    android:layout_weight="1"                      android:text="discount"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:paddingBottom="10dp"
                    android:maxHeight="55dp"
                    android:id="@+id/text_pricel_supcategry"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"

                    android:layout_width="0dp"
                    android:layout_weight="1"                      android:text="description"
                    android:maxLines="1"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>





        </LinearLayout>


        <ImageButton
            android:id="@+id/imagebu_deleet_supcategry"
            android:layout_margin="8sp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:background="@color/br"
            android:src="@android:drawable/btn_dialog"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>